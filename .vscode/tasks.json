{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build: backend",
			"platform": "python",
			"dockerBuild": {
				"tag": "wedding:develop",
				"dockerfile": "${workspaceFolder}/wedding-backend/docker/Dockerfile",
				"context": "${workspaceFolder}/wedding-backend",
				"pull": true
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "docker-build",
			"label": "docker-build: frontend",
			"dockerBuild": {
				"tag": "wedding-frontend:develop",
				"dockerfile": "${workspaceFolder}/wedding-frontend/docker/Dockerfile",
				"context": "${workspaceFolder}/wedding-frontend",
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"args": [
					"runserver",
					"0.0.0.0:8000",
					"--nothreading",
					"--noreload"
				],
				"file": "manage.py"
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: release",
			"dependsOn": [
				"docker-build"
			],
			"platform": "node",
			"node": {
				"package": "${workspaceFolder}/wedding-frontend/package.json"
			}
		},
		{
			"type": "npm",
			"script": "dev",
			"path": "wedding-frontend",
			"problemMatcher": [],
			"label": "vuejs: start",
			"detail": "vite dev",
			"isBackground": true
		},
		{
			"type": "npm",
			"script": "build",
			"path": "wedding-frontend",
			"problemMatcher": [],
			"label": "vuejs: build",
			"detail": "vite build",
			"isBackground": false
		},
		{
			"type": "shell",
			"command": "redis-server",
			"problemMatcher": [],
			"label": "redis",
			"isBackground": true
		}
	]
}