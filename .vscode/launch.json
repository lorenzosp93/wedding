{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "vuejs: chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}/wedding-frontend/src",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*",
            },
            "preLaunchTask": "vuejs: start"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/wedding-backend/manage.py",
            "cwd": "${workspaceFolder}/wedding-backend",
            "args": [
                "runserver"
            ],
            "django": true
        },
        {
            "name": "Python: Celery",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/wedding-backend",
            "django": true,
            "args": [
                "--app",
                "wedding",
                "worker",
                "--loglevel=INFO",
            ],
            "preLaunchTask": "redis"
        },
        {
            "name": "Docker: Python - Django",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "python": {
                "pathMappings": [
                    {
                        "localRoot": "${workspaceFolder}/wedding-backend",
                        "remoteRoot": "/app"
                    }
                ],
                "projectType": "django"
            }
        },
        {
            "name": "Docker Node.js Launch",
            "type": "docker",
            "request": "launch",
            "preLaunchTask": "docker-run: debug",
            "platform": "node",
            "node": {
                "package": "${workspaceFolder}/wedding-frontend/package.json",
                "localRoot": "${workspaceFolder}/wedding-frontend"
            }
        }
    ]
}